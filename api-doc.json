  "paths": {
    "/workspace": {
      "post": {
        "summary": "Create a new domain",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domainName": {
                    "type": "string",
                    "example": "example.domain.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Realm created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Workspace created"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
